---
interface Props {
  title: string;
  imgSrc: string;
  imgAlt: string;
  description: string;
}
import { Card } from '@eliancodes/brutal-ui';
const { title, imgAlt, imgSrc, description } = Astro.props;
---

<Card
  color="white"
>
  <h3 class='poppins text-lg md:text-xl'>{title}</h3>
  <div class="container mx-auto align-items-center">
    <div class='rounded-lg border-3 border-black my-4 h-76'>
      <img
        src={imgSrc}
        alt={imgAlt}
        width={800}
        height={800}
        class='rounded h-full w-full object-cover'
      />
    </div>
    <p class='poppins'>{description}</p>
  </div>
  
  <slot />
</Card>
