---
import Layout from '../layouts/Default.astro';
import RecentBlogPosts from '../components/generic/RecentBlogPosts.astro';
import MobileSocials from '../components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'C++', url: 'https://astro.build/' },
  { name: 'Vulkan', url: 'https://uno.antfu.me/' },
  {
    name: 'Unreal Engine 5',
    url: 'https://docs.astro.build/en/guides/content-collections/',
  },
  { name: 'C#/.NET', url: 'https://vercel.com' },
  { name: 'Unity3D', url: 'https://docs.astro.build/en/guides/rss/' },
  { name: 'JavaScript/TypeScript (Vue)', url: 'https://www.typescriptlang.org/' },
];
---

<Layout
  title='Home'
  pageTitle='Brutal Theme |Â Home'
  description='Brutal is a minimalistic, neobrutalism theme for Astro.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Brutal</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Jo Colomban (they/them)
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              I'm a full-stack software engineer and aspiring gamedev based in MalmÃ¶, Sweden
            </p>
            <div class="row">
              <Button target={'_self'} href='/portfolio/'>
                Check out my portfolio! &rarr;
              </Button>
              <Button target={'_self'} href='/portfolio/'>
                Download my resume &rarr;
              </Button>
            </div>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            Skills
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class="sanchez"
                      target='_blank'
                      title={`${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Who am I?
          </h2>
          <p class='poppins'>
            IDK gay i guess? I like game engines and my loving partners (hi Cam and Lizi ðŸŒ¸)
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
